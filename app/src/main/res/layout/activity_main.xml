<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.example.rampel.digitalliteracytest.MainActivity">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/start_Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/hand"
        android:nestedScrollingEnabled="false"
        android:onClick="test_form"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Start Assessment"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/start_Button"
        android:textColor="#fff93444"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/start_Button"
        android:layout_alignParentStart="true"
        android:background="@drawable/app" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Check Results"
        android:id="@+id/textView8"
        android:layout_below="@+id/start_Button"
        android:layout_alignStart="@+id/imageButton"
        android:textColor="#fff93444"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:background="@drawable/clips" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tutorial Videos"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:textColor="#fff93444"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:background="@drawable/bookings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Book training"
        android:id="@+id/textView10"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:textColor="#fff93444"
        android:textSize="20dp"
        android:textStyle="bold"
        />
</RelativeLayout>
